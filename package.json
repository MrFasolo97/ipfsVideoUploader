{
  "name": "ipfsvideouploader",
  "productName": "OneLoveIPFS",
  "version": "3.0.0",
  "description": "Cross-platform IPFS uploader for 3Speak and DTube videos.",
  "homepage": "https://uploader.oneloveipfs.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/oneloveipfs/ipfsVideoUploader"
  },
  "main": "src/electronApp.js",
  "scripts": {
    "start": "node src/index.js",
    "v2migration": "node scripts/v2Migration.js",
    "test": "mocha --timeout 5000",
    "snyk-protect": "snyk-protect",
    "prepare": "npm run snyk-protect",
    "devapp": "electron src/electronApp.js",
    "prepapp": "node scripts/electronPrep.js",
    "buildapp-macos": "electron-packager . OneLoveIPFS --overwrite --app-copyright 'Copyright (C) 2022 TechCoderX' --asar --platform darwin --icon public/macos_icon.icns",
    "buildapp-windows": "electron-packager . OneLoveIPFS --overwrite --app-copyright 'Copyright (C) 2022 TechCoderX' --asar --platform=win32 --version-string.FileDescription 'OneLoveIPFS Uploader' --version-string.ProductName OneLoveIPFS --icon public/win32_icon.ico",
    "buildapp-linux": "electron-packager . OneLoveIPFS --overwrite --app-copyright 'Copyright (C) 2022 TechCoderX' --asar --platform linux",
    "build-installer": "electron-builder",
    "build-hivecryptpro": "browserify -e src/hivecryptPro.js -p tinyify -o lib/hivecryptpro.min.js",
    "install-olisc": "npm i https://github.com/oneloveipfs/olisc --save-optional",
    "dep-prune": "npm un @snyk/protect async body-parser bs58 crypto-js form-data fluent-ffmpeg hivecrypt hivesigner ipfs-http-client javalon jsonwebtoken mime-types multer node-schedule node-webvtt secp256k1 shelljs socket.io"
  },
  "build": {
    "appId": "com.oneloveipfs.uploader",
    "productName": "OneLoveIPFS",
    "copyright": "Copyright (C) 2022 TechCoderX",
    "files": [
      "!docs/",
      "!dist/",
      "!OneLoveIPFS-*/",
      "!test/",
      "!handbrake/",
      "!scripts/"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "public/macos_icon.icns",
      "minimumSystemVersion": "11"
    },
    "win": {
      "icon": "public/win32_icon.ico",
      "legalTrademarks": "OneLoveIPFS",
      "target": "nsis"
    },
    "linux": {
      "icon": "public/macos_icon.icns",
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Video"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "perMachine": true,
      "differentialPackage": false
    },
    "dmg": {
      "writeUpdateInfo": false
    }
  },
  "author": "techcoderx <engtianxi@outlook.com>",
  "bugs": "https://github.com/oneloveipfs/ipfsVideoUploader/issues",
  "license": "GPLv3",
  "dependencies": {
    "@snyk/protect": "^1.989.0",
    "about-window": "^1.15.2",
    "async": "^3.2.4",
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "deepmerge": "^4.2.2",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.1",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^3.0.0",
    "hivesigner": "^3.2.8",
    "http-proxy": "^1.18.1",
    "ipfs-http-client": "^56.0.3",
    "javalon": "^1.0.36",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.5-lts.1",
    "node-schedule": "^2.1.0",
    "node-webvtt": "^1.9.4",
    "shelljs": "^0.8.5",
    "socket.io": "^4.5.1"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "chai": "^4.3.4",
    "electron": "^20.1.1",
    "electron-builder": "^23.3.3",
    "electron-packager": "^16.0.0",
    "mocha": "^9.1.3",
    "tinyify": "^3.0.0"
  },
  "snyk": true,
  "optionalDependencies": {
    "bs58": "^5.0.0",
    "hivecrypt": "^2.0.4",
    "secp256k1": "^4.0.3"
  }
}
